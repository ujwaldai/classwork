@model kina.Models.salary_details
@{
    ViewBag.Title = "edit";
}

<h2>edit</h2>

@using (Html.BeginForm("UpdateData", null))
{
    <input type="hidden" name="s_id" class="form-control" value="@(Model.s_id)" />
    <label class="col-md-2">E_id</label>
    <div class="col-md-4">
        <input type="text" name="e_id" class="form-control" value="@(Model.e_id)" />
    </div>
    <br />
    <br />
    <label class="col-md-2">Salary:</label>
    <div class="col-md-4">
        <input type="text" name="salary_paid" class="form-control" value="@(Model.salary_paid)" />
    </div>
    <br />
    <br />
    <label class="col-md-2">PaidDate:</label>
    <div class="col-md-4">
        <input type="date" name="paid_date" class="form-control" value="@(Model.paid_date)" />
    </div>
    <br />
    <button >Submit</button>
    <br />
}
